.message{data: {message: {id: message.id}}}
  .info
    .taker
      = message.user.name
    .date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .text
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'text' if message.image.present?